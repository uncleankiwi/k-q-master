<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8sp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtQuestionPanelQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Question"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/editQuestionPanelQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/Question"
            android:importantForAutofill="no"
            android:inputType="textPersonName" />

        <LinearLayout
            android:id="@+id/llQuestionPanelEditControls"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnQuestionPanelSetImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/Set_image" />

            <Button
                android:id="@+id/btnQuestionPanelDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/Delete" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imgQuestionPanel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/Quiz_app" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioGroup
                android:id="@+id/radGrpQuestionPanelAns"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:id="@+id/QuestionPanelAnsContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"></LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btnQuestionPanelAddAns"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Add" />
    </LinearLayout>
</androidx.cardview.widget.CardView>